<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButtonList"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/contact_list_button_desc"
            app:srcCompat="@drawable/contact_list" />

        <ImageButton
            android:id="@+id/imageButtonMap"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/map_button_desc"
            app:srcCompat="@drawable/map_icon" />

        <ImageButton
            android:id="@+id/imageButtonSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/settings_button_desc"
            app:srcCompat="@drawable/settings_list_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/sortContactsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort Contacts By:"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="21dp" />

    <RadioGroup
        android:id="@+id/radioGroupSortBy"
        android:layout_width="128dp"
        android:layout_height="141dp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="60dp">

        <RadioButton
            android:id="@+id/radioName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />

        <RadioButton
            android:id="@+id/radioCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City" />

        <RadioButton
            android:id="@+id/radioBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birthday" />
    </RadioGroup>

    <TextView
        android:id="@+id/sortOrderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort Order:"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="212dp" />

    <RadioGroup
        android:id="@+id/radioGroupSortOrder"
        android:layout_width="128dp"
        android:layout_height="86dp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="248dp">

        <RadioButton
            android:id="@+id/ascendingRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ascending" />

        <RadioButton
            android:id="@+id/descendingRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descending" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>